<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/open_book" />

                <TextView
                    android:id="@+id/namabuku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="40"
                    android:hint="Judul Buku" />

                <TextView
                    android:id="@+id/Nama_Loker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Rental"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:maxLines="10"/>

                <TextView
                    android:id="@+id/hargasewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:hint="Harga Sewa" />

                <EditText
                    android:id="@+id/gambar2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:hint="URL Gambar" />

                <EditText
                    android:id="@+id/nama_penyewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:hint="Nama Penyewa" />
                <EditText
                    android:id="@+id/tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:hint="No.Hp/WA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">


                    <Button
                        android:layout_marginLeft="10dp"
                        android:id="@+id/btnSave"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sewa"
                        android:backgroundTint="#3F51B5"/>

                </LinearLayout>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:text="Keterangan : Pesanan Anda Akan segera kami proses" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>